<!-- Modal for login-->
<div class="modal fade bd-example-modal-lg" id="Modal-create-account" tabindex="-1" role="dialog"
    aria-labelledby="ModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h1 class="modal-title" id="ModalTitle"><i class="fa fa-user" aria-hidden="true"></i>Create your account
                </h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body fnf-bg-green">
                <div class="containers">
                    <main id="modal-login">
                        <div class="row">
                            <div class="col-12">
                                <form>
                                    <!--form group-->
                                    <div class="form-group input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                        </div>
                                        <input id="first-name" name="" class="form-control"
                                            placeholder="your first name" type="text" required />
                                    </div>
                                    <!--form group-->
                                    <div class="form-group input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                        </div>
                                        <input id="last-name" name="" class="form-control" placeholder="your last name"
                                            type="text" required />
                                    </div>
                                    <!--form group-->
                                    <div class="form-group input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                        </div>
                                        <input id="email" name="" class="form-control"
                                            placeholder="Emailaddress@domain.com" type="email" required />
                                    </div>
                                    <!--form group-->
                                    <div class="form-group input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                        </div>
                                        <input id="password" class="form-control" placeholder="Create password"
                                            type="password" required />
                                    </div>
                                    <!--form group-->
                                    <div class="form-group input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                        </div>
                                        <input class="form-control" placeholder="Repeat password" type="password"
                                            id="password-comprobation" required />
                                    </div>
                                    <!--form group-->
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success btn-block" id="add">
                                            Create Account
                                        </button>
                                    </div>
                                    <!--form group-->
                                    <p class="text-center">Have an account? <a class="login-customer-link" href="#">Sign
                                            In</a>
                                    </p>
                                </form>
                            </div>
                    </main>

                </div>
            </div>
            <div class="modal-footer fnf-bg-green">
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-light text-primary border border-primary" href="/auth/google"
                            style="width:37vw; max-width:100%;">
                            <img src="./assets/images/google-logo-icon.png" class="img-responsive"
                                style="max-height: 4vh; max-width:4vw">
                            Sign Up with Google
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{{>inputvalidations/fieldvalidation}}