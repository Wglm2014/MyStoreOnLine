<div class="row p-2">
    <div class="col-12">
        <h4 class="text-center">Add a payment method</h4>
        <form>

            <div class="form-row">
                <!--form group-->
                <div class="form-group col-md-5 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-credit-card"></i></i> </span>
                    </div>
                    <input id="credit-card" name="" placeholder="credit card number" class="form-control" value=''
                        type="text" />
                </div>
                <div class="form-group col-md-5 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-calendar"></i> </span>
                    </div>
                    <select id="experitaion-month" name="" placeholder="MM" class="form-control" value='00'>
                        <option value="01">January</option>
                        <option value="02">Frebruary</option>
                        <option value="03">March</option>
                        <option value="04">April</option>
                        <option value="05">May</option>
                        <option value="06">June</option>
                        <option value="07">July</option>
                        <option value="08">August</option>
                        <option value="09">September</option>
                        <option value="10">Octuber</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                    <input id="experitaion-year" name="" placeholder="YYYY" class="form-control" value='' type="number"
                        min=2019 max=9999 />
                </div>
                <!--form group-->
                <div class="form-group col-md-2 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-credit-card"></i>
                        </span>
                    </div>
                    <input id="scv" name="" class="form-control" value="" placeholder="scv" type="text" />
                </div>
            </div>
            <!--form group-->


            <h4 class="text-center">Billing address </h4>
            <div class="form-check text-center">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Same as personal
                </label>
            </div>
            <!--form group-->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-map-marked-alt"></i>
                    </span>
                </div>
                <input id="bill-address" name="" class="form-control" placeholder="Address" type="text" />
            </div>
            <div class="form-row">
                <!--form group-->
                <div class="form-group col-md-6 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-map-marker-alt"></i></span>
                    </div>
                    <input id="bill-city" cityname="" class="form-control" placeholder="City" type="text" />
                </div>
                <!--form group-->
                <div class="form-group col-md-3 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-map-marker-alt"></i>
                        </span>
                    </div>
                    <input id="bill-state" name="" class="form-control" placeholder="State" type="text" />
                </div>
                <!--form group-->
                <div class="form-group col-md-3 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-map-marker-alt"></i>
                        </span>
                    </div>
                    <input id="bill-zip-code" name="" class="form-control" placeholder="Zip code" type="text" />
                </div>
            </div>
            <!--form group-->
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block" id="bill-add">
                    Save Changes
                </button>
            </div>
        </form>
    </div>

</div>